<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.techmanager.controllers.ViewTechniqueController"
      spacing="15" alignment="TOP_CENTER"
      styleClass="list-container">

    <Label text="Список всей техники" styleClass="list-title"/>

    <TextArea fx:id="listArea" wrapText="true" editable="false"
              styleClass="list-area"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Обновить" onAction="#handleRefresh"
                styleClass="action-button"/>
        <Button text="Назад" onAction="#handleBack"
                styleClass="action-button"/>
    </HBox>

</VBox>